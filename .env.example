# Database Configuration
DB_HOST=localhost
DB_USER=ollama_user
DB_PASS=your_secure_password_here
DB_NAME=ollama-chat
DB_PORT=3306
DB_COMPRESS=false

# Query Logging (for development/debugging)
QUERY_LOGGING_ENABLED=false
QUERY_LOG_TO_FILE=true
QUERY_LOG_PATH=./logs/queries.log
SLOW_QUERY_THRESHOLD=1000

# Performance Logging
PERFORMANCE_LOGGING_ENABLED=true
PERFORMANCE_LOG_PATH=./logs/performance.log

# Environment
NODE_ENV=development

# Ollama Configuration
# Ollama endpoint for client-side calls (optional, defaults to http://localhost:11434/api/chat)
VITE_OLLAMA_ENDPOINT=http://localhost:11434/api/chat
